<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.InvoiceActivity">

    <android.support.v7.widget.CardView
            android:layout_width="360dp"
            android:layout_height="300dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:cardCornerRadius="6dp"
            app:cardElevation="20dp" app:layout_constraintHorizontal_bias="0.494" android:layout_marginTop="230dp">


        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                    android:text="THANK YOU"
                    android:fontFamily="@font/roboto_mono_thin"
                    android:textColor="@color/colorAccent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="40dp"
                    android:id="@+id/textView2" android:layout_marginTop="50dp"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="173dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView2" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:divider="?android:dividerHorizontal"
                    android:showDividers="middle">


                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="6dp">

                    <TextView
                            android:id="@+id/name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="JOHN DOE"
                            android:fontFamily="@font/roboto_bold"
                            android:textAlignment="viewEnd"/>

                    <TextView
                            android:id="@+id/email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="doe.john@gmail.com"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:fontFamily="@font/roboto_mono"
                            android:textAlignment="viewEnd"/>

                    <TextView
                            android:id="@+id/phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="692 342 1449"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:fontFamily="@font/roboto_mono"
                            android:textAlignment="viewEnd"/>

                    <TextView
                            android:id="@+id/address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Averof 2, Lamia, GR"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:fontFamily="@font/roboto_mono"
                            android:textAlignment="viewEnd"/>

                    <TextView
                            android:id="@+id/postalCode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="35100"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:fontFamily="@font/roboto_mono"
                            android:textAlignment="viewEnd"/>

                </LinearLayout>

                <LinearLayout
                        android:id="@+id/invoice_products"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="6dp">

                    <TextView
                            android:id="@+id/totalCost"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="TOTAL: 123"
                            android:fontFamily="@font/roboto_bold"/>

                </LinearLayout>
            </LinearLayout>
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
            android:layout_width="250dp"
            android:layout_height="250dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:cardCornerRadius="130dp"
            app:cardElevation="30dp" app:layout_constraintHorizontal_bias="0.496">

        <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent" app:srcCompat="@drawable/ic_done"
                android:layout_margin="50dp"
                android:id="@+id/imageView" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"/>
    </android.support.v7.widget.CardView>

    <android.support.design.widget.FloatingActionButton
            android:id="@+id/invoiceFab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="@dimen/fab_margin"
            app:srcCompat="@drawable/ic_home" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"/>

</android.support.constraint.ConstraintLayout>