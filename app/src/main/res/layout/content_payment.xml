<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_payment"
        tools:context=".ui.PaymentActivity">

    <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
        <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="6dp"
                app:cardElevation="20dp">


            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <TextView
                        android:text="PAYMENT INFORMATION"
                        android:textSize="24dp"
                        android:fontFamily="@font/roboto_bold"
                        android:layout_margin="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="67dp"
                        android:layout_marginEnd="12dp"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="6dp"
                        android:inputType="numberSigned"
                        android:hint="Card Number"
                        android:ems="10"
                        android:id="@+id/cardNumber" android:layout_weight="1"/>

                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="100dp">

                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content">
                        <EditText
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="12dp"
                                android:layout_marginStart="12dp"
                                android:layout_marginTop="6dp"
                                android:layout_marginBottom="6dp"
                                android:inputType="numberSigned"
                                android:hint="CVV"
                                android:ems="10"
                                android:id="@+id/cvv" android:layout_weight="1"
                                android:fontFamily="sans-serif"/>
                    </LinearLayout>

                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <EditText
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="12dp"
                                android:layout_marginTop="6dp"
                                android:layout_marginBottom="6dp"
                                android:inputType="date"
                                android:hint="Exp. Date"
                                android:ems="10"
                                android:id="@+id/expDate" android:layout_weight="1"/>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="6dp"
                app:cardElevation="20dp">


            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <TextView
                        android:text="DELIVERY INFORMATION"
                        android:textSize="24dp"
                        android:fontFamily="@font/roboto_bold"
                        android:layout_margin="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/textView"/>

                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="67dp"
                        android:layout_marginEnd="12dp"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="6dp"
                        android:inputType="textPersonName"
                        android:hint="Name"
                        android:ems="10"
                        android:id="@+id/name" android:layout_weight="1"/>

                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="100dp">

                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content">
                        <EditText
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="12dp"
                                android:layout_marginStart="12dp"
                                android:layout_marginTop="6dp"
                                android:layout_marginBottom="6dp"
                                android:inputType="text"
                                android:hint="Address"
                                android:ems="10"
                                android:id="@+id/address" android:layout_weight="1"/>

                        <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="12dp"
                                android:layout_marginStart="12dp"
                                android:layout_marginTop="3dp"
                                android:layout_marginBottom="6dp"
                                android:inputType="numberSigned"
                                android:hint="Postal Code"
                                android:ems="10"
                                android:id="@+id/postalCode" android:layout_weight="1"/>
                    </LinearLayout>

                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <EditText
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="12dp"
                                android:layout_marginTop="6dp"
                                android:layout_marginBottom="6dp"
                                android:inputType="textEmailAddress"
                                android:hint="email"
                                android:ems="10"
                                android:id="@+id/email" android:layout_weight="1"/>
                        <EditText
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="12dp"
                                android:layout_marginTop="3dp"
                                android:layout_marginBottom="6dp"
                                android:inputType="numberSigned"
                                android:hint="Telephone"
                                android:ems="10"
                                android:id="@+id/telephone" android:layout_weight="1"/>
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>